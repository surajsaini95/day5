<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
 
	<!-- Executed when webFlow is triggered -->
	<on-start>
	<!-- demohandler is java class available through annotated Demohandler.java class.here we are calling itâ€™s initFlow() method. -->
	  <evaluate expression="demohandler.initFlow()" result="flowScope.userBean"/>
	</on-start>
 
	 <!-- if not specified the first view state is the starting state -->
	
	<view-state id="start" view="cart" model="flowScope.userBean">
	   <transition on="submit" to="validate"/>
	</view-state>
 
	<action-state id="validate">
		<evaluate expression="demohandler.validateDetails(userBean,messageContext)"></evaluate>
		<transition on="success" to="checkout" />
		<transition on="failure" to="start" />
	</action-state>
 
	<view-state id="checkout" view="checkout" model="flowScope.userBean">
		<!-- <transition on="edit" to="cart" />
		 -->
		 <transition on="submit" to="success" />
	</view-state>
 
	<end-state id="success" view="success" />
	<end-state id="toHome" view="externalRedirect:contextRelative:index.jsp" />
	<end-state id="toException" view="externalRedirect:contextRelative:exception.jsp" />
 
	<!-- these events are available in every state-->
	<global-transitions>
		<!-- <transition on="AddProduct" to="productTable" />
		 -->
		 
		 <transition on="error" to="toException" />
	</global-transitions>
</flow>